{# Outfit Card Component #}
<div class="group relative bg-white dark:bg-gray-800 rounded-3xl shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100 dark:border-gray-700 overflow-hidden flex flex-col h-full">
    
    {# Image Collage Area #}
    <a href="{{ path('app_outfit_show', {'id': outfit.id}) }}" class="block relative aspect-[4/5] bg-gray-100 dark:bg-gray-700 overflow-hidden">
        {# We can create a mini-collage if we have images, or show the first one #}
        {% if outfit.prendas|length > 0 %}
             <div class="grid grid-cols-2 h-full w-full">
                {% for prenda in outfit.prendas|slice(0, 4) %}
                    <div class="relative w-full h-full border-[0.5px] border-white/20">
                         {% if prenda.imagen %}
                            <img src="{{ asset('uploads/images/' ~ prenda.imagen) }}" alt="{{ prenda.nombre }}" class="w-full h-full object-cover">
                        {% else %}
                             <div class="w-full h-full flex items-center justify-center bg-gray-200 dark:bg-gray-600 text-gray-400">
                                <i class="bi bi-image"></i>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
                 {# Fill empty slots if < 4 items to keep grid nice, or just let CSS handle it. 
                    Actually, let's just make it a simple featured image if functionality implies that,
                    but 'outfit' usually implies a collection. The grid above is a decent collage. #}
            </div>
            
            {# Overlay with basic info #}
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex flex-col justify-end p-4">
                 <span class="text-white font-bold text-sm">Ver Outfit <i class="bi bi-arrow-right ml-1"></i></span>
            </div>
        {% else %}
            <div class="w-full h-full flex items-center justify-center text-gray-400 flex-col gap-2">
                <i class="bi bi-layers text-4xl mb-2"></i>
                <span class="text-xs font-bold uppercase tracking-wider">Outfit Vacío</span>
            </div>
        {% endif %}
        
        {# Date Badge #}
        <div class="absolute top-3 right-3 bg-white/90 dark:bg-gray-900/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-bold text-dark-gray dark:text-white shadow-sm border border-gray-100 dark:border-gray-700">
            {{ outfit.fechaPublicacion ? outfit.fechaPublicacion|date('d M') : 'Nuevo' }}
        </div>
    </a>

    {# Content Body #}
    <div class="p-5 flex flex-col flex-1">
        <div class="flex justify-between items-start mb-3">
            <div>
                 <h3 class="font-bold text-lg text-dark-gray dark:text-gray-400 leading-tight mb-1 group-hover:text-neon-lime transition-colors">
                    <a href="{{ path('app_outfit_show', {'id': outfit.id}) }}">
                        {{ outfit.titulo|default('Sin Título') }}
                    </a>
                </h3>
                <div class="flex items-center gap-2">
                     <div class="w-5 h-5 rounded-full bg-gray-200 dark:bg-gray-600 overflow-hidden">
                        {% if outfit.user.profilePhoto %}
                            <img src="{{ outfit.user.profilePhoto }}" class="w-full h-full object-cover">
                        {% else %}
                             <div class="w-full h-full flex items-center justify-center text-[10px] font-bold text-dark-gray dark:text-gray-300">
                                {{ outfit.user.name|first|upper }}
                             </div>
                        {% endif %}
                    </div>
                    <span class="text-xs font-bold text-gray-500 dark:text-gray-500">{{ outfit.user.name }}</span>
                </div>
            </div>
            
            {# Like/Save Buttons (Mock functionality for UI) #}
            <button class="text-gray-400 hover:text-red-500 transition-colors">
                <i class="bi bi-heart"></i>
            </button>
        </div>

        <div class="mt-auto pt-4 border-t border-gray-50 dark:border-gray-700 flex items-center justify-between text-xs text-gray-400 font-bold">
            <span class="flex items-center gap-1">
                <i class="bi bi-collection"></i> {{ outfit.prendas|length }} Prendas
            </span>
            <span class="uppercase tracking-wider text-[10px] bg-gray-100 dark:bg-gray-700 dark:text-gray-300 px-2 py-1 rounded">
                {{ outfit.type ? outfit.type.value : 'Casual' }}
            </span>
        </div>
    </div>
</div>
