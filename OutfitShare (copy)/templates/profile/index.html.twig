{% extends 'base.html.twig' %}

{% block title %}{{ user.name }} - Profile{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto" x-data="{ activeTab: 'outfits' }">
    {# Banner #}
    <div class="h-48 bg-gradient-to-r from-gray-800 to-gray-900 rounded-t-3xl relative overflow-hidden">
        {% if user.bannerPhoto %}
            <img src="{{ user.bannerPhoto }}" class="w-full h-full object-cover opacity-60">
        {% else %}
             <div class="absolute inset-0 opacity-20 bg-[radial-gradient(#C6F402_1px,transparent_1px)] [background-size:20px_20px]"></div>
        {% endif %}
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-b-3xl shadow-xl border border-gray-100 dark:border-gray-700 px-8 pb-8 mb-8 relative transition-colors">
        {# Avatar & Actions #}
        <div class="flex justify-between items-end -mt-12 mb-6">
            <div class="flex items-end gap-6">
                <div class="relative">
                    <div class="w-32 h-32 rounded-full bg-white dark:bg-gray-800 p-1 shadow-lg overflow-hidden transition-colors">
                        {% if user.profilePhoto %}
                            <img src="{{ user.profilePhoto }}" class="w-full h-full object-cover rounded-full">
                        {% else %}
                             <div class="w-full h-full rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-4xl text-dark-gray dark:text-gray-200 font-bold border-4 border-white dark:border-gray-800 transition-colors">
                                {{ user.name|first|upper }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                {# Followers/Following Stats #}
                <div class="flex gap-6 mb-4 hidden md:flex">
                    <a href="#" class="group flex flex-col items-center hover:bg-gray-50 dark:hover:bg-gray-700 p-2 -m-2 rounded-lg transition-colors">
                        <span class="font-extrabold text-xl text-dark-gray dark:text-gray-100 leading-none group-hover:text-neon-lime transition-colors">{{ user.followers|length }}</span>
                        <span class="text-xs text-gray-400 font-bold uppercase tracking-wider">Followers</span>
                    </a>
                    <a href="#" class="group flex flex-col items-center hover:bg-gray-50 dark:hover:bg-gray-700 p-2 -m-2 rounded-lg transition-colors">
                        <span class="font-extrabold text-xl text-dark-gray dark:text-gray-100 leading-none group-hover:text-neon-lime transition-colors">{{ user.following|length }}</span>
                        <span class="text-xs text-gray-400 font-bold uppercase tracking-wider">Following</span>
                    </a>
                </div>
            </div>
            
            <div class="flex gap-3 mb-2">
                {% if app.user == user %}
                    <a href="{{ path('app_profile_settings') }}" class="px-5 py-2 rounded-full border border-gray-200 dark:border-gray-600 font-bold text-sm hover:bg-gray-50 dark:hover:bg-gray-700 dark:text-gray-200 transition-colors">
                        Edit Profile
                    </a>
                    <button class="px-5 py-2 rounded-full bg-neon-lime text-dark-gray font-bold text-sm shadow-md hover:brightness-105 transition-colors">
                        Share
                    </button>
                {% else %}
                    {# Follow Button #}
                    <div x-data="{ 
                        isFollowing: {{ app.user.following.contains(user) ? 'true' : 'false' }},
                        isLoading: false,
                        async toggle() {
                            if (this.isLoading) return;
                            this.isLoading = true;
                            try {
                                const res = await fetch('{{ path('app_follow_toggle', {'id': user.id}) }}', { method: 'POST' });
                                const data = await res.json();
                                if (res.ok) {
                                    this.isFollowing = data.isFollowing;
                                }
                            } catch(e) { console.error(e); }
                            this.isLoading = false;
                        }
                    }">
                        <button @click="toggle()" 
                                :class="isFollowing ? 'bg-gray-100 dark:bg-gray-700 text-dark-gray dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-600' : 'bg-dark-gray dark:bg-black text-white hover:bg-black'"
                                class="px-6 py-2 rounded-full font-bold text-sm shadow-md transition-all flex items-center gap-2"
                                :disabled="isLoading">
                            <span x-text="isFollowing ? 'Following' : 'Follow'"></span>
                            <i x-show="isLoading" class="bi bi-arrow-repeat animate-spin"></i>
                        </button>
                    </div>
                {% endif %}
            </div>
        </div>
        
        {# Info #}
        <div>
            <div class="flex flex-col md:flex-row md:items-center gap-x-6 gap-y-2 mb-1">
                <h1 class="text-3xl font-extrabold text-dark-gray dark:text-white flex items-center gap-2">
                    {{ user.name }}
                    {% if user.isPublic %}
                        <i class="bi bi-globe text-gray-400 text-lg" title="Public Profile"></i>
                    {% else %}
                        <i class="bi bi-lock-fill text-gray-400 text-lg" title="Private Profile"></i>
                    {% endif %}
                </h1>

                {# Followers/Following Stats Next to Name #}
                <div class="flex gap-4 text-sm pt-2 md:pt-0">
                    <a href="#" class="group flex items-center gap-1 hover:bg-gray-50 dark:hover:bg-gray-700 px-2 py-1 -ml-2 rounded-lg transition-colors">
                        <span class="font-extrabold text-dark-gray dark:text-gray-100 group-hover:text-neon-lime transition-colors">{{ user.followers|length }}</span> 
                        <span class="text-gray-500 font-bold">Followers</span>
                    </a>
                    <span class="text-gray-300 dark:text-gray-600 transform scale-75">â€¢</span>
                    <a href="#" class="group flex items-center gap-1 hover:bg-gray-50 dark:hover:bg-gray-700 px-2 py-1 rounded-lg transition-colors">
                        <span class="font-extrabold text-dark-gray dark:text-gray-100 group-hover:text-neon-lime transition-colors">{{ user.following|length }}</span> 
                        <span class="text-gray-500 font-bold">Following</span>
                    </a>
                </div>
            </div>

            <p class="text-gray-500 font-medium mb-4">@{{ user.nickname|default(user.email|split('@')[0]) }}</p>
            
            {% if user.biography %}
                <p class="text-dark-gray dark:text-gray-300 mb-6 max-w-2xl">{{ user.biography }}</p>
            {% else %}
                <p class="text-gray-400 italic mb-6">No biography yet.</p>
            {% endif %}
            
            {# Stats #}
            <div class="flex gap-8 border-t border-gray-100 dark:border-gray-700 pt-6 overflow-x-auto">
                 <div class="text-center">
                    <span class="block font-extrabold text-xl text-dark-gray dark:text-gray-100">{{ user.outfits|length }}</span>
                    <span class="text-xs text-gray-400 font-bold uppercase tracking-wider">Outfits</span>
                </div>
                {# Mobile Only Followers/Following could go here or just hide them #}
                <div class="text-center md:hidden">
                    <span class="block font-extrabold text-xl text-dark-gray dark:text-gray-100">{{ user.followers|length }}</span>
                    <span class="text-xs text-gray-400 font-bold uppercase tracking-wider">Followers</span>
                </div>
                <div class="text-center md:hidden">
                    <span class="block font-extrabold text-xl text-dark-gray dark:text-gray-100">{{ user.following|length }}</span>
                    <span class="text-xs text-gray-400 font-bold uppercase tracking-wider">Following</span>
                </div>
                <div class="text-center">
                    <span class="block font-extrabold text-xl text-dark-gray dark:text-gray-100">{{ user.savedOutfits|length }}</span>
                    <span class="text-xs text-gray-400 font-bold uppercase tracking-wider">Saved</span>
                </div>
                <div class="text-center">
                    <span class="block font-extrabold text-xl text-dark-gray dark:text-gray-100">{{ user.likes|length }}</span>
                    <span class="text-xs text-gray-400 font-bold uppercase tracking-wider">Likes</span>
                </div>
            </div>
        </div>
    </div>
    
    {# Tabs #}
    <div class="flex gap-6 border-b border-gray-200 dark:border-gray-700 mb-6 px-4">
        <button @click="activeTab = 'outfits'" 
                :class="{ 'border-neon-lime text-dark-gray dark:text-white': activeTab === 'outfits', 'border-transparent text-gray-500 hover:text-gray-700 dark:hover:text-gray-300': activeTab !== 'outfits' }"
                class="pb-3 border-b-2 font-bold transition-colors">
            Created Outfits
        </button>
        
        {% if app.user == user or user.showSavedPublicly %}
            <button @click="activeTab = 'saved'" 
                    :class="{ 'border-neon-lime text-dark-gray dark:text-white': activeTab === 'saved', 'border-transparent text-gray-500 hover:text-gray-700 dark:hover:text-gray-300': activeTab !== 'saved' }"
                    class="pb-3 border-b-2 font-bold transition-colors">
                Saved ({{ user.savedOutfits|length }})
            </button>
        {% endif %}

        {% if app.user == user or user.showLikesPublicly %}
            <button @click="activeTab = 'likes'" 
                    :class="{ 'border-neon-lime text-dark-gray dark:text-white': activeTab === 'likes', 'border-transparent text-gray-500 hover:text-gray-700 dark:hover:text-gray-300': activeTab !== 'likes' }"
                    class="pb-3 border-b-2 font-bold transition-colors">
                Liked ({{ user.likes|length }})
            </button>
        {% endif %}
    </div>
    
    {# Tab Content - Outfits #}
    <div x-show="activeTab === 'outfits'" class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {% for outfit in user.outfits %}
            {% include 'outfit/_card.html.twig' with {'outfit': outfit} %}
        {% else %}
             <div class="col-span-3 text-center py-10 bg-gray-50 dark:bg-gray-800 rounded-3xl border border-dashed border-gray-200 dark:border-gray-700">
                <p class="text-gray-400">No outfits created yet.</p>
                {% if app.user == user %}
                    <a href="{{ path('app_outfit_new') }}" class="text-neon-lime font-bold mt-2 block">Create one now</a>
                {% endif %}
            </div>
        {% endfor %}
    </div>

    {# Tab Content - Saved #}
    {% if app.user == user or user.showSavedPublicly %}
        <div x-show="activeTab === 'saved'" class="grid grid-cols-2 md:grid-cols-3 gap-4" style="display: none;">
            {% for item in user.savedOutfits %}
                {# item is SavedOutfit entity, we need item.outfit #}
                {% include 'outfit/_card.html.twig' with {'outfit': item.outfit} %}
            {% else %}
                <div class="col-span-3 text-center py-10 bg-gray-50 dark:bg-gray-800 rounded-3xl border border-dashed border-gray-200 dark:border-gray-700">
                    <p class="text-gray-400">Nothing saved yet.</p>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {# Tab Content - Likes #}
    {% if app.user == user or user.showLikesPublicly %}
         <div x-show="activeTab === 'likes'" class="grid grid-cols-2 md:grid-cols-3 gap-4" style="display: none;">
            {% for item in user.likes %}
                {# item is Like entity, we need item.outfit #}
                {% include 'outfit/_card.html.twig' with {'outfit': item.outfit} %}
            {% else %}
                <div class="col-span-3 text-center py-10 bg-gray-50 dark:bg-gray-800 rounded-3xl border border-dashed border-gray-200 dark:border-gray-700">
                    <p class="text-gray-400">No likes yet.</p>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
