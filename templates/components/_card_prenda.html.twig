{# ============================================
   OutfitShare — Card de Prenda (Sistema de Diseño)
   ============================================ #}

{% if prenda is defined %}
<div class="armario-card" x-data="{ showDeleteModal: false }">
    <div class="armario-card-inner">
        {# Image #}
        <div class="armario-card-image">
            {% if prenda.imagen is defined and prenda.imagen is not empty %}
                <img src="{{ asset('uploads/images/' ~ prenda.imagen) }}" 
                     alt="{{ prenda.nombre }}"
                     loading="lazy">
            {% else %}
                <div class="armario-card-placeholder">
                    <svg viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                        <circle cx="8.5" cy="8.5" r="1.5"/>
                        <polyline points="21 15 16 10 5 21"/>
                    </svg>
                    <span>Sin imagen</span>
                </div>
            {% endif %}

            {# Category Badge #}
            {% if prenda.categoria %}
                <span class="armario-card-badge">{{ prenda.categoria }}</span>
            {% endif %}
            
            {# Overlay Actions (Hover) #}
            <div class="armario-card-actions">
                <a href="{{ path('app_prenda_edit', {'id': prenda.id}) }}" 
                   class="armario-card-action armario-card-action--edit"
                   title="Editar prenda">
                    <svg viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                    </svg>
                </a>
                
                <button type="button"
                        @click.stop="showDeleteModal = true"
                        class="armario-card-action armario-card-action--delete"
                        title="Eliminar prenda">
                    <svg viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="3 6 5 6 21 6"/>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
    
    {# Meta #}
    <div class="armario-card-meta">
        <h6 class="armario-card-name">{{ prenda.nombre }}</h6>
        <p class="armario-card-brand">{{ prenda.marca|default('Sin marca') }}</p>
    </div>

    {# Delete Confirmation Modal #}
    <template x-if="showDeleteModal">
        <div class="armario-modal-overlay"
             @click.self="showDeleteModal = false"
             @keydown.escape.window="showDeleteModal = false"
             x-transition:enter="transition ease-out duration-200"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100">
            <div class="armario-modal-card" @click.stop>
                <h3 class="armario-modal-title">¿Eliminar esta prenda?</h3>
                <p class="armario-modal-desc">
                    Esta acción no se puede deshacer. La prenda se eliminará permanentemente de tu armario.
                </p>
                <div class="armario-modal-actions">
                    <button class="armario-modal-cancel" @click="showDeleteModal = false">
                        Cancelar
                    </button>
                    <a href="{{ path('app_prenda_delete', {'id': prenda.id}) }}" 
                       class="armario-modal-confirm"
                       style="text-decoration: none; display: inline-flex; align-items: center; justify-content: center;">
                        Sí, eliminar
                    </a>
                </div>
            </div>
        </div>
    </template>
</div>
{% endif %}
