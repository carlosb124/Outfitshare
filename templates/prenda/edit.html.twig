{% extends 'base.html.twig' %}

{% block title %}Editar Prenda - OutfitShare{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4">
            <div class="card-body">
                <div class="d-flex align-items-center mb-4">
                    <a href="{{ path('app_prenda_index') }}" class="btn btn-outline-secondary me-3">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    <div>
                        <h2 class="fw-bold mb-0">Editar Prenda</h2>
                        <p class="text-muted mb-0">Actualiza los detalles de tu prenda</p>
                    </div>
                </div>

                {# Previsualización de la imagen actual #}
                {% if prenda.imagen %}
                    <div class="mb-4 text-center">
                         <img src="{{ asset('uploads/images/' ~ prenda.imagen) }}" 
                              class="rounded-3 shadow-sm" 
                              style="height: 150px; object-fit: cover;"
                              alt="{{ prenda.nombre }}">
                         <p class="text-muted small mt-2">Imagen actual</p>
                    </div>
                {% endif %}

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'enctype': 'multipart/form-data'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.nombre) }}
                        {{ form_widget(form.nombre) }}
                        {{ form_errors(form.nombre) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.marca) }}
                        {{ form_widget(form.marca) }}
                        {{ form_errors(form.marca) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.categoria) }}
                        {{ form_widget(form.categoria) }}
                        {{ form_errors(form.categoria) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.imagenFile, 'Cambiar imagen (opcional)') }}
                        {{ form_widget(form.imagenFile) }}
                        {{ form_errors(form.imagenFile) }}
                        <div class="form-text">Formatos: JPG, PNG, WebP. Máximo 5MB.</div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save me-2"></i>Guardar Cambios
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
