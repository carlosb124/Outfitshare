{% extends 'base.html.twig' %}

{% block title %}Editar prenda - OutfitShare{% endblock %}

{% block body %}
<div style="max-width:580px;margin:40px auto;padding:0 16px;" x-data="{ showDeleteModal: false }">
    <div class="os-card os-card--flat" style="padding:32px;position:relative;overflow:hidden;">
        {# Decoration blur #}
        <div style="position:absolute;top:-64px;right:-64px;width:128px;height:128px;border-radius:50%;background:rgba(181,255,46,0.15);filter:blur(40px);pointer-events:none;"></div>

        {# Header #}
        <div style="display:flex;align-items:center;gap:16px;margin-bottom:32px;position:relative;">
            <a href="{{ path('app_prenda_index') }}" class="settings-back">
                <svg viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
            </a>
            <div>
                <h2 class="os-title os-title--sm">Editar prenda</h2>
                <p class="os-subtitle">Actualiza los datos de la prenda</p>
            </div>
        </div>

        {# Current Image Preview #}
        {% if prenda.imagen %}
            <div class="armario-form-preview">
                <img src="{{ asset('uploads/images/' ~ prenda.imagen) }}" alt="{{ prenda.nombre }}">
                <p class="os-hint" style="margin-top:8px;">Imagen actual</p>
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'style': 'display:flex;flex-direction:column;gap:0;', 'enctype': 'multipart/form-data'}}) }}
            
            <div class="os-field">
                {{ form_label(form.nombre) }}
                {{ form_widget(form.nombre) }}
                {{ form_errors(form.nombre) }}
            </div>

            <div class="os-field">
                {{ form_label(form.marca) }}
                {{ form_widget(form.marca) }}
                {{ form_errors(form.marca) }}
            </div>

            <div class="os-field">
                {{ form_label(form.categoria) }}
                {{ form_widget(form.categoria) }}
                {{ form_errors(form.categoria) }}
            </div>

            <div class="os-field">
                {{ form_label(form.imagenFile, 'Cambiar imagen (opcional)') }}
                {{ form_widget(form.imagenFile) }}
                {{ form_errors(form.imagenFile) }}
                <p class="os-hint">Formatos: JPG, PNG, WebP (máx. 5 MB)</p>
            </div>

            <div style="padding-top:16px;display:grid;grid-template-columns:1fr 1fr;gap:12px;">
                <button type="button" class="os-btn os-btn--destructive" @click="showDeleteModal = true">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="3 6 5 6 21 6"/>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                    </svg>
                    Eliminar
                </button>
                <button type="submit" class="os-btn os-btn--primary os-btn--block">
                    Guardar cambios
                </button>
            </div>
        {{ form_end(form) }}
    </div>

    {# Delete Confirmation Modal #}
    <template x-if="showDeleteModal">
        <div class="armario-modal-overlay" @click.self="showDeleteModal = false" @keydown.escape.window="showDeleteModal = false">
            <div class="armario-modal-box" @click.stop>
                <svg width="48" height="48" viewBox="0 0 24 24" stroke="#C0392B" fill="none" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/>
                </svg>
                <h3 class="armario-modal-title">¿Eliminar esta prenda?</h3>
                <p class="armario-modal-desc">
                    Esta acción no se puede deshacer. La prenda se eliminará permanentemente de tu armario y de todos los looks que la contengan.
                </p>
                <div class="armario-modal-actions">
                    <button class="os-btn os-btn--outline os-btn--sm" @click="showDeleteModal = false">Cancelar</button>
                    <a href="{{ path('app_prenda_delete', {'id': prenda.id}) }}" class="os-btn os-btn--sm" style="background:#C0392B;color:#FFF;text-decoration:none;">
                        Sí, eliminar
                    </a>
                </div>
            </div>
        </div>
    </template>
</div>
{% endblock %}
