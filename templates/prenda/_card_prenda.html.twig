    <div class="armario-card-body">
        <div>
            <a href="{{ path('app_prenda_edit', {'id': prenda.id}) }}" class="armario-card-name">
                {{ prenda.nombre|default('Sin nombre') }}
            </a>
            {% if prenda.marca %}
                <span class="armario-card-brand">{{ prenda.marca }}</span>
            {% endif %}
        </div>
        <button class="os-btn os-btn--ghost" @click.stop="showDelete = true" title="Eliminar">
            <svg width="16" height="16" viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
            </svg>
        </button>
    </div>

    {# Delete Confirmation Modal #}
    <template x-if="showDelete">
        <div class="armario-modal-overlay" @click.self="showDelete = false">
            <div class="armario-modal-box">
                <svg width="48" height="48" viewBox="0 0 24 24" stroke="#C0392B" fill="none" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/>
                </svg>
                <h3 class="armario-modal-title">¿Eliminar prenda?</h3>
                <p class="armario-modal-desc">Esta acción no se puede deshacer.</p>
                <div class="armario-modal-actions">
                    <button type="button" @click="showDelete = false" class="os-btn os-btn--outline os-btn--sm">Cancelar</button>
                    <form method="post" action="{{ path('app_prenda_delete', {'id': prenda.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prenda.id) }}">
                        <button type="submit" class="os-btn os-btn--sm" style="background:#C0392B;color:#FFF;">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    </template>
</div>
