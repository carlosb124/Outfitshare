{% extends 'base.html.twig' %}

{% block title %}Añadir prenda - OutfitShare{% endblock %}

{% block body %}
<div style="max-width:580px;margin:40px auto;padding:0 16px;">
    <div class="os-card os-card--flat" style="padding:32px;position:relative;overflow:hidden;">
        {# Decoration blur #}
        <div style="position:absolute;top:-64px;right:-64px;width:128px;height:128px;border-radius:50%;background:rgba(181,255,46,0.15);filter:blur(40px);pointer-events:none;"></div>

        {# Header #}
        <div style="display:flex;align-items:center;gap:16px;margin-bottom:32px;position:relative;">
            <a href="{{ path('app_prenda_index') }}" class="settings-back">
                <svg viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
            </a>
            <div>
                <h2 class="os-title os-title--sm">Añadir prenda</h2>
                <p class="os-subtitle">Sube una prenda a tu armario</p>
            </div>
        </div>

        {{ form_start(form, {'attr': {'style': 'display:flex;flex-direction:column;gap:0;', 'enctype': 'multipart/form-data'}}) }}
            
            <div class="os-field">
                {{ form_label(form.nombre) }}
                {{ form_widget(form.nombre) }}
                {{ form_errors(form.nombre) }}
            </div>

            <div class="os-field">
                {{ form_label(form.marca) }}
                {{ form_widget(form.marca) }}
                {{ form_errors(form.marca) }}
            </div>

            <div class="os-field">
                {{ form_label(form.categoria) }}
                {{ form_widget(form.categoria) }}
                {{ form_errors(form.categoria) }}
            </div>

            <div class="os-field">
                {{ form_label(form.imagenFile) }}
                {{ form_widget(form.imagenFile) }}
                {{ form_errors(form.imagenFile) }}
                <p class="os-hint">Formatos: JPG, PNG, WebP (máx. 5 MB)</p>
            </div>

            <div style="padding-top:16px;">
                <button type="submit" class="os-btn os-btn--primary os-btn--block">
                    Guardar en mi armario
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
