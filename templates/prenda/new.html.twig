{% extends 'base.html.twig' %}

{% block title %}Nueva Prenda - OutfitShare{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4">
            <div class="card-body">
                <div class="d-flex align-items-center mb-4">
                    <a href="{{ path('app_prenda_index') }}" class="btn btn-outline-secondary me-3">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    <div>
                        <h2 class="fw-bold mb-0">Nueva Prenda</h2>
                        <p class="text-muted mb-0">Añade una prenda a tu armario</p>
                    </div>
                </div>

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'enctype': 'multipart/form-data'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.nombre) }}
                        {{ form_widget(form.nombre) }}
                        {{ form_errors(form.nombre) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.marca) }}
                        {{ form_widget(form.marca) }}
                        {{ form_errors(form.marca) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.categoria) }}
                        {{ form_widget(form.categoria) }}
                        {{ form_errors(form.categoria) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.imagenFile) }}
                        {{ form_widget(form.imagenFile) }}
                        {{ form_errors(form.imagenFile) }}
                        <div class="form-text">Formatos: JPG, PNG, WebP. Máximo 5MB.</div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-lg me-2"></i>Guardar Prenda
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
