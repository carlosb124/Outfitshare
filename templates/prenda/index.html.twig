{% extends 'base.html.twig' %}

{% block title %}Mi Armario - OutfitShare{% endblock %}

{% block body %}
<div class="hero-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">
                <i class="bi bi-grid-fill me-2"></i>Mi Armario
            </h1>
            <p class="text-muted mb-0">Tienes {{ prendas|length }} prenda{{ prendas|length != 1 ? 's' : '' }}</p>
        </div>
        <a href="{{ path('app_prenda_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Añadir Prenda
        </a>
    </div>

    {% if prendas|length > 0 %}
    <div class="masonry-grid">
        {% for prenda in prendas %}
            {% include 'components/_card_prenda.html.twig' with {'prenda': prenda} %}
        {% endfor %}
    </div>
    {% else %}
    <div class="text-center py-5">
        <div class="card py-5 px-4">
            <i class="bi bi-inbox text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-4 fw-bold">Tu armario está vacío</h3>
            <p class="text-muted mb-4">¡Empieza añadiendo tu primera prenda!</p>
            <div>
                <a href="{{ path('app_prenda_new') }}" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-lg me-2"></i>Añadir mi primera prenda
                </a>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
