{% extends 'base.html.twig' %}

{% block title %}Mi Armario - OutfitShare{% endblock %}

{% block body %}
<div class="os-page">
    {# Header #}
    <div class="os-header">
        <div>
            <h1 class="os-title os-title--lg">Mi <span class="accent">Armario</span></h1>
            <p class="os-subtitle">{{ prendas|length }} prendas en tu colección</p>
        </div>
        <a href="{{ path('app_prenda_new') }}" class="os-btn os-btn--primary os-btn--pill">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round">
                <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
            <span>Añadir prenda</span>
        </a>
    </div>

    {# Filter pills: commented out until controller passes tipos
    <div class="os-pills">
        <a href="{{ path('app_prenda_index') }}" class="os-pill os-pill--active">Todo</a>
    </div>
    #}

    {% if prendas is empty %}
        {# Empty State #}
        <div class="os-empty">
            <div class="os-empty__icon">
                <svg viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
                    <line x1="3" y1="6" x2="21" y2="6"/>
                    <path d="M16 10a4 4 0 0 1-8 0"/>
                </svg>
            </div>
            <h3 class="os-empty__title">Tu armario está vacío</h3>
            <p class="os-empty__desc">Añade tu primera prenda y empieza a crear looks increíbles.</p>
            <a href="{{ path('app_prenda_new') }}" class="os-btn os-btn--primary os-btn--pill">
                Añadir mi primera prenda
            </a>
        </div>
    {% else %}
        {# Cards Grid #}
        <div class="os-grid">
            {% for prenda in prendas %}
                {% include 'prenda/_card_prenda.html.twig' %}
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
