{% extends 'base.html.twig' %}

{% block title %}OutfitShare - The Social Wardrobe{% endblock %}

{# Override default navbar #}
{% block navbar %}
    {% include 'components/_navbar_public.html.twig' %}
{% endblock %}

{% block body %}
    {# 1. HERO SECTION #}
    <section class="relative pt-32 pb-20 overflow-hidden bg-off-white">
        <div class="container mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">
            {# Text #}
            <div class="relative z-10 text-center md:text-left">
                <span class="inline-block bg-lavender px-4 py-1.5 rounded-full text-xs font-bold uppercase tracking-wider mb-6 animate-fade-in-up">
                    âœ¨ Your digital closet
                </span>
                <h1 class="text-5xl md:text-7xl font-extrabold leading-[0.9] tracking-tight mb-8">
                    Discover your best wardrobe
                    <span class="text-neon-lime">for you</span>.
                </h1>
                <p class="text-lg md:text-xl text-gray-700 mb-10 max-w-lg mx-auto md:mx-0">
                    Digitise your wardrobe, see what you own, and get styling suggestions. Good for your wallet, better for the planet.
                </p>
                
                <div class="flex flex-col md:flex-row gap-4 justify-center md:justify-start">
                    <a href="{{ path('app_register') }}" class="bg-black text-white px-8 py-4 rounded-full font-bold text-lg hover:shadow-[6px_6px_0px_0px_rgba(198,244,2,1)] transition-all flex items-center justify-center gap-2">
                        <i class="bi bi-apple"></i> Download App
                    </a>
                    <a href="{{ path('app_feed') }}" class="bg-white border-2 border-black text-black px-8 py-4 rounded-full font-bold text-lg hover:bg-gray-50 transition-all flex items-center justify-center gap-2">
                        View Web Feed <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>

            {# Hero Image (Collage) #}
            <div class="relative">
                <div class="absolute -top-20 -right-20 w-96 h-96 bg-lavender rounded-full blur-3xl opacity-50"></div>
                <div class="relative z-10 grid grid-cols-2 gap-4 transform rotate-3 hover:rotate-0 transition-transform duration-500">
                    <img src="https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?w=500&q=80" class="rounded-3xl shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] border-2 border-black object-cover h-64 w-full">
                    <img src="https://images.unsplash.com/photo-1483985988355-763728e1935b?w=500&q=80" class="rounded-3xl shadow-[8px_8px_0px_0px_rgba(198,244,2,1)] border-2 border-black object-cover h-64 w-full mt-12">
                    <img src="https://i.pinimg.com/736x/9b/e4/44/9be44457b34d1f5827db6e1dc060882f.jpg" class="rounded-3xl shadow-[8px_8px_0px_0px_rgba(198,244,2,1)] border-2 border-black object-cover h-64 w-full -mt-12">
                    <img src="https://images.unsplash.com/photo-1545291730-faff8ca1d4b0?w=500&q=80" class="rounded-3xl shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] border-2 border-black object-cover h-64 w-full">
                </div>
            </div>
        </div>
    </section>

    {# 2. LOGOS / AS SEEN ON #}
    <section class="bg-lavender py-10 border-y-2 border-black overflow-hidden whitespace-nowrap">
        <div class="container mx-auto px-6 relative flex items-center justify-center md:justify-start">
            <span class="font-bold uppercase text-sm mr-12 shrink-0 hidden md:inline-block">As seen in</span>
            <div class="flex gap-12 md:gap-16 opacity-70 font-black text-xl md:text-2xl tracking-widest items-center flex-wrap justify-center">
                <span>VOGUE</span>
                <span>FORBES</span>
                <span>ELLE</span>
                <span>BAZAAR</span>
                <span>REFINERY29</span>
                <span>VICE</span>
            </div>
        </div>
    </section>

    {# 3. FEATURES #}
    <section id="features" class="py-24 bg-white">
        <div class="container mx-auto px-6">
            <div class="grid md:grid-cols-2 gap-20 items-center">
                {# Image #}
                <div class="order-2 md:order-1 relative">
                    <div class="absolute inset-0 bg-neon-lime rounded-[3rem] transform translate-x-4 translate-y-4 border-2 border-black"></div>
                    <img src="https://images.unsplash.com/photo-1558769132-cb1aea458c5e?w=800&q=80" class="relative z-10 rounded-[3rem] border-2 border-black w-full shadow-xl">
                </div>

                {# Content #}
                <div class="order-1 md:order-2">
                    <h2 class="text-4xl md:text-6xl font-extrabold mb-12 leading-tight">
                        Wardrobe bliss in <br>
                        <span class="text-lavender bg-black px-2">three steps</span>
                    </h2>

                    <div class="space-y-10">
                        {# Feature 1 #}
                        <div class="flex gap-6 group">
                            <div class="w-16 h-16 shrink-0 bg-neon-lime rounded-full border-2 border-black flex items-center justify-center text-2xl font-black group-hover:scale-110 transition-transform">1</div>
                            <div>
                                <h3 class="text-2xl font-bold mb-2">Snap & Upload</h3>
                                <p class="text-gray-500 text-lg">Add your clothes in seconds. We remove the background automatically so you can focus on styling.</p>
                            </div>
                        </div>

                        {# Feature 2 #}
                        <div class="flex gap-6 group">
                            <div class="w-16 h-16 shrink-0 bg-lavender rounded-full border-2 border-black flex items-center justify-center text-2xl font-black group-hover:scale-110 transition-transform">2</div>
                            <div>
                                <h3 class="text-2xl font-bold mb-2">Create Outfits</h3>
                                <p class="text-gray-500 text-lg">Mix and match items on our "Clueless-style" canvas. Plan looks for work, dates, or travel.</p>
                            </div>
                        </div>

                        {# Feature 3 #}
                        <div class="flex gap-6 group">
                             <div class="w-16 h-16 shrink-0 bg-black text-neon-lime rounded-full border-2 border-black flex items-center justify-center text-2xl font-black group-hover:scale-110 transition-transform">3</div>
                            <div>
                                <h3 class="text-2xl font-bold mb-2">Get Styled</h3>
                                <p class="text-gray-500 text-lg">Don't know what to wear? Let our "Randomizer" suggest combos you never thought of.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# 4. COMMUNITY #}
    <section id="community" class="py-24 bg-off-white">
         <div class="container mx-auto px-6 text-center">
            <h2 class="text-4xl md:text-6xl font-extrabold mb-4">Join 2M+ Wherers</h2>
            <p class="text-xl text-gray-500 mb-16 max-w-2xl mx-auto">Real people, real wardrobes. Get inspired by how others style the same items you own.</p>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-8">
                 <div class="relative group cursor-pointer">
                    <img src="https://images.unsplash.com/photo-1539008835657-9e8e9680c956?w=600&q=80" class="h-80 w-full object-cover rounded-2xl border-2 border-black group-hover:-translate-y-2 transition-transform duration-300">
                    <div class="absolute bottom-4 left-4 bg-white px-3 py-1 rounded-full border border-black text-xs font-bold">@sarah_style</div>
                 </div>
                 <div class="relative group cursor-pointer md:mt-12">
                    <img src="https://images.unsplash.com/photo-1549298916-b41d501d3772?w=600&q=80" class="h-80 w-full object-cover rounded-2xl border-2 border-black group-hover:-translate-y-2 transition-transform duration-300">
                    <div class="absolute bottom-4 left-4 bg-white px-3 py-1 rounded-full border border-black text-xs font-bold">@mike_drips</div>
                 </div>
                 <div class="relative group cursor-pointer">
                    <img src="https://images.unsplash.com/photo-1506634572416-48cdfe530110?w=600&q=80" class="h-80 w-full object-cover rounded-2xl border-2 border-black group-hover:-translate-y-2 transition-transform duration-300">
                    <div class="absolute bottom-4 left-4 bg-white px-3 py-1 rounded-full border border-black text-xs font-bold">@elena_wears</div>
                 </div>
                 <div class="relative group cursor-pointer md:mt-12">
                    <img src="https://images.unsplash.com/photo-1520024146169-3240400354ae?w=600&q=80" class="h-80 w-full object-cover rounded-2xl border-2 border-black group-hover:-translate-y-2 transition-transform duration-300">
                    <div class="absolute bottom-4 left-4 bg-white px-3 py-1 rounded-full border border-black text-xs font-bold">@alex_fits</div>
                 </div>
            </div>
             
             <div class="mt-16">
                 <a href="{{ path('app_register') }}" class="inline-block bg-neon-lime px-12 py-5 rounded-full text-xl font-black border-2 border-black shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:shadow-[10px_10px_0px_0px_rgba(0,0,0,1)] hover:-translate-y-1 transition-all">
                     Join the Community
                 </a>
             </div>
         </div>
    </section>

    {# FOOTER #}
    <footer class="bg-black text-white py-12">
        <div class="container mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-6">
            <div class="text-2xl font-extrabold flex items-center gap-2">
                <i class="bi bi-asterisk text-neon-lime"></i> OutfitShare
            </div>
            <div class="flex gap-8 text-sm font-bold text-gray-400">
                <a href="#" class="hover:text-white">Privacy</a>
                <a href="#" class="hover:text-white">Terms</a>
                <a href="#" class="hover:text-white">Contact</a>
            </div>
            <div class="text-gray-500 text-sm">
                &copy; {{ "now"|date("Y") }} OutfitShare Inc.
            </div>
        </div>
    </footer>
{% endblock %}
