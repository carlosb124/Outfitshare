{% extends 'base.html.twig' %}

{% block title %}Registro - OutfitShare{% endblock %}

{% block body %}
<div class="flex flex-col justify-center items-center min-h-[70vh] bg-off-white dark:bg-gray-900 transition-colors duration-300">
    <div class="w-full max-w-md">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8 border border-gray-100 dark:border-gray-700">
            <div class="text-center mb-6">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-neon-lime/20 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-black dark:text-neon-lime" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                    </svg>
                </div>
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">Crear cuenta</h2>
                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Únete a la comunidad de OutfitShare</p>
            </div>

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="mb-4 p-4 rounded-lg bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-sm border border-red-100 dark:border-red-800" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <!-- Botón de Google -->
            <div class="mb-6">
                <a href="{{ path('connect_google') }}" class="w-full flex justify-center items-center py-3 px-4 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm bg-white dark:bg-gray-700 text-sm font-medium text-gray-700 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-neon-lime transition-all duration-200 transform hover:scale-[1.02]">
                    <svg class="h-5 w-5 mr-2" aria-hidden="true" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 0 5.867 0 12.48c0 6.613 5.867 12.48 12.48 12.48 3.6 0 6.347-1.187 8.547-3.413 2.24-2.24 2.947-5.48 2.947-8.147 0-.8-.08-1.573-.24-2.307H12.48z"></path>
                    </svg>
                    Registrarse con Google <span class="ml-1 text-xs text-gray-400">(Más rápido)</span>
                </a>
            </div>

            <div class="relative mb-6">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-gray-300 dark:border-gray-600"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-2 bg-white dark:bg-gray-800 text-gray-500">O crea una cuenta clásica</span>
                </div>
            </div>

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                <div>
                    {{ form_label(registrationForm.name, 'Nombre', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1'}}) }}
                    <div class="relative">
                        {{ form_widget(registrationForm.name, {'attr': {'class': 'block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700/50 text-gray-900 dark:text-white focus:border-neon-lime focus:ring-neon-lime sm:text-sm py-3 px-4 transition-colors'}}) }}
                    </div>
                    {{ form_errors(registrationForm.name, {'attr': {'class': 'mt-1 text-sm text-red-500'}}) }}
                </div>

                <div>
                    {{ form_label(registrationForm.email, 'Correo electrónico', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1'}}) }}
                    <div class="relative">
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700/50 text-gray-900 dark:text-white focus:border-neon-lime focus:ring-neon-lime sm:text-sm py-3 px-4 transition-colors'}}) }}
                    </div>
                    {{ form_errors(registrationForm.email, {'attr': {'class': 'mt-1 text-sm text-red-500'}}) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword, 'Contraseña', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1'}}) }}
                    <div class="relative">
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700/50 text-gray-900 dark:text-white focus:border-neon-lime focus:ring-neon-lime sm:text-sm py-3 px-4 transition-colors'}}) }}
                    </div>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Mínimo 6 caracteres</p>
                    {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'mt-1 text-sm text-red-500'}}) }}
                </div>

                <div class="pt-2">
                    <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-black bg-neon-lime hover:bg-[#b0d902] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-neon-lime transition-all duration-200 transform hover:scale-[1.02]">
                        Registrarse
                    </button>
                </div>
            {{ form_end(registrationForm) }}

            <div class="mt-8 text-center bg-gray-50 dark:bg-gray-700/30 rounded-lg py-4">
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    ¿Ya tienes una cuenta? 
                    <a href="{{ path('app_login') }}" class="font-bold text-black dark:text-white hover:text-neon-lime hover:underline transition-colors">
                        Inicia sesión
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
