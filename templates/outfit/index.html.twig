{% extends 'base.html.twig' %}

{% block title %}Feed - OutfitShare{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto">
    {# Header #}
    <div class="flex justify-between items-end mb-8">
        <div>
            <h1 class="text-3xl font-extrabold text-dark-gray dark:text-gray-300 leading-tight">
                Descubre Tu <span class="text-neon-lime">Estilo</span>
            </h1>
            <p class="text-gray-600 dark:text-gray-500 font-bold mt-1">Nuevos looks frescos de la comunidad</p>
        </div>
        
        <a href="{{ path('app_outfit_new') }}" class="bg-dark-gray dark:bg-white text-white dark:text-dark-gray font-extrabold px-6 py-3 rounded-full hover:bg-black dark:hover:bg-gray-200 transition-all shadow-lg flex items-center gap-2 transform hover:-translate-y-1">
            <i class="bi bi-plus-lg text-lg"></i>
            Crear Outfit
        </a>
    </div>

    {% if outfits is empty %}
        <div class="text-center py-20 bg-gray-50 dark:bg-gray-800/50 rounded-3xl border border-dashed border-gray-200 dark:border-gray-700">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-white dark:bg-gray-700 rounded-full shadow-md mb-6 text-neon-lime">
                <i class="bi bi-hanger text-4xl"></i>
            </div>
            <h2 class="text-2xl font-bold text-dark-gray dark:text-white mb-2">Aún no hay outfits</h2>
            <p class="text-gray-400 mb-6">¡Sé el primero en compartir tu estilo!</p>
            <a href="{{ path('app_outfit_new') }}" class="text-dark-gray dark:text-white font-bold underline decoration-neon-lime decoration-4 underline-offset-4 hover:text-black dark:hover:text-gray-200">Empieza a diseñar</a>
        </div>
    {% else %}
        {# Grid #}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for outfit in outfits %}
                {% include 'outfit/_card.html.twig' with {'outfit': outfit} %}
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
