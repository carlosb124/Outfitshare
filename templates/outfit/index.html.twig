{% extends 'base.html.twig' %}

{% block title %}Mis Outfits{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-collection-fill me-2"></i>Mis Outfits</h1>
        <a href="{{ path('app_outfit_new') }}" class="btn btn-primary d-flex align-items-center gap-2">
            <i class="bi bi-plus-lg"></i> Crear Nuevo Outfit
        </a>
    </div>

    {% if outfits is empty %}
        <div class="text-center py-5">
            <div class="display-1 text-muted mb-3"><i class="bi bi-hanger"></i></div>
            <h2 class="h4 text-muted">Aún no has creado ningún outfit</h2>
            <p class="text-secondary">Combina tus prendas y guarda tus estilos favoritos.</p>
            <a href="{{ path('app_outfit_new') }}" class="btn btn-outline-primary mt-3">Empezar a diseñar</a>
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for outfit in outfits %}
                <div class="col">
                    <div class="card h-100 shadow-sm hover-card transition-all">
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-primary">{{ outfit.titulo }}</h5>
                            <p class="card-text text-muted small mb-3">
                                <i class="bi bi-calendar3 me-1"></i> {{ outfit.fechaPublicacion|date('d M, Y') }}
                            </p>
                            <p class="card-text text-truncate">{{ outfit.descripcion }}</p>
                            
                            <hr>
                            
                            <div class="d-flex align-items-center gap-2 mb-3">
                                <span class="badge bg-light text-dark border">
                                    <i class="bi bi-layers-fill me-1"></i> {{ outfit.prendas|length }} prendas
                                </span>
                            </div>

                            {# Miniatura de prendas (primeras 3) #}
                            <div class="d-flex gap-1 mb-3">
                                {% for prenda in outfit.prendas|slice(0, 4) %}
                                    {% if prenda.imagen %}
                                        <div class="ratio ratio-1x1" style="width: 40px;">
                                            <img src="{{ asset('uploads/images/' ~ prenda.imagen) }}" 
                                                 class="rounded border object-fit-cover" 
                                                 alt="{{ prenda.nombre }}">
                                        </div>
                                    {% endif %}
                                {% endfor %}
                                {% if outfit.prendas|length > 4 %}
                                    <div class="ratio ratio-1x1 bg-light rounded d-flex align-items-center justify-content-center text-muted small" style="width: 40px;">
                                        +{{ outfit.prendas|length - 4 }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center pb-3">
                            <a href="{{ path('app_outfit_show', {'id': outfit.id}) }}" class="btn btn-sm btn-outline-primary">
                                Ver Detalle
                            </a>
                            <small class="text-muted">
                                <i class="bi bi-heart-fill text-danger me-1"></i> 0 Likes
                            </small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
