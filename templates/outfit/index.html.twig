{% extends 'base.html.twig' %}

{% block title %}Mis Looks - OutfitShare{% endblock %}

{% block body %}
<div class="os-page">
    <div class="os-header">
        <div>
            <h1 class="os-title os-title--lg">Descubre Tu <span class="accent">Estilo</span></h1>
            <p class="os-subtitle">Nuevos looks frescos de la comunidad</p>
        </div>
        <a href="{{ path('app_outfit_new') }}" class="os-btn os-btn--primary os-btn--pill">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round">
                <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
            <span>Crear look</span>
        </a>
    </div>

    {% if outfits is empty %}
        <div class="os-empty">
            <div class="os-empty__icon">
                <svg viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 16l4.586-4.586a2 2 0 0 1 2.828 0L16 16"/>
                    <path d="M14.828 12.828l1.586-1.586a2 2 0 0 1 2.828 0L21 13"/>
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                </svg>
            </div>
            <h3 class="os-empty__title">Aún no hay looks</h3>
            <p class="os-empty__desc">Comparte tu primer look con la comunidad.</p>
            <a href="{{ path('app_outfit_new') }}" class="os-btn os-btn--primary os-btn--pill">Empieza a diseñar</a>
        </div>
    {% else %}
        <div class="os-grid">
            {% for outfit in outfits %}
                {% include 'outfit/_card.html.twig' with {'outfit': outfit} %}
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
