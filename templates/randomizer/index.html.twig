{% extends 'base.html.twig' %}

{% block title %}IA Estilista - OutfitShare{% endblock %}

{% block body %}
<div class="os-page" style="padding: 32px 0;">
    <div class="os-header--center" style="text-align:center; margin-bottom:48px;">
        <h1 class="os-title os-title--lg" style="display:flex;align-items:center;justify-content:center;gap:12px;">
            <svg class="os-icon--lg os-icon-accent" viewBox="0 0 24 24">
                <path d="M12 2L14.09 8.26L20.18 9.27L15.54 13.97L16.82 20.02L12 17.27L7.18 20.02L8.46 13.97L3.82 9.27L9.91 8.26Z"/>
            </svg>
            IA Estilista
        </h1>
        <p class="os-subtitle" style="margin-top:8px;">Deja que el azar dise침e tu pr칩ximo look.</p>
    </div>

    <turbo-frame id="randomizer_frame">
        <div class="estilista-slots">
            {% if hasEnough %}
                {# Top #}
                <div class="estilista-slot">
                    {% if outfit.top %}
                        <div class="os-card os-card--interactive estilista-slot-card">
                            <div class="estilista-slot-label os-label">Arriba</div>
                            <div class="estilista-slot-image">
                                <img src="{{ asset('uploads/images/' ~ outfit.top.imagen) }}" alt="{{ outfit.top.nombre }}">
                            </div>
                            <div class="estilista-slot-name">{{ outfit.top.nombre }}</div>
                        </div>
                    {% else %}
                        <div class="estilista-slot-missing">
                            <svg viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/>
                            </svg>
                            <span>Falta parte de arriba</span>
                        </div>
                    {% endif %}
                </div>

                <div class="estilista-plus">
                    <svg viewBox="0 0 24 24" stroke-linecap="round">
                        <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
                    </svg>
                </div>

                {# Bottom #}
                <div class="estilista-slot">
                    {% if outfit.bottom %}
                        <div class="os-card os-card--interactive estilista-slot-card">
                            <div class="estilista-slot-label os-label">Abajo</div>
                            <div class="estilista-slot-image">
                                <img src="{{ asset('uploads/images/' ~ outfit.bottom.imagen) }}" alt="{{ outfit.bottom.nombre }}">
                            </div>
                            <div class="estilista-slot-name">{{ outfit.bottom.nombre }}</div>
                        </div>
                    {% else %}
                        <div class="estilista-slot-missing">
                            <svg viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/>
                            </svg>
                            <span>Falta parte de abajo</span>
                        </div>
                    {% endif %}
                </div>

                {% if outfit.shoes %}
                    <div class="estilista-plus">
                        <svg viewBox="0 0 24 24" stroke-linecap="round">
                            <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
                        </svg>
                    </div>
                    <div class="estilista-slot">
                        <div class="os-card os-card--interactive estilista-slot-card">
                            <div class="estilista-slot-label os-label">Zapatos</div>
                            <div class="estilista-slot-image">
                                <img src="{{ asset('uploads/images/' ~ outfit.shoes.imagen) }}" alt="{{ outfit.shoes.nombre }}">
                            </div>
                            <div class="estilista-slot-name">{{ outfit.shoes.nombre }}</div>
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <div class="os-empty" style="width:100%;">
                    <div class="os-empty__icon">
                        <svg viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
                            <line x1="3" y1="6" x2="21" y2="6"/>
                            <path d="M16 10a4 4 0 0 1-8 0"/>
                        </svg>
                    </div>
                    <h3 class="os-empty__title">Necesitas m치s prendas</h3>
                    <p class="os-empty__desc">Sube al menos una parte de arriba y una de abajo para que la IA pueda crear combinaciones.</p>
                    <a href="{{ path('app_prenda_new') }}" class="os-btn os-btn--primary os-btn--pill" data-turbo="false">A침adir prendas</a>
                </div>
            {% endif %}
        </div>

        {% if hasEnough %}
            <div class="estilista-actions">
                <a href="{{ path('app_randomizer_index') }}" class="os-btn os-btn--outline os-btn--pill">
                    <svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="1 4 1 10 7 10"/><polyline points="23 20 23 14 17 14"/>
                        <path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"/>
                    </svg>
                    Girar de nuevo
                </a>
                
                {% set ids = [] %}
                {% if outfit.top %} {% set ids = ids|merge([outfit.top.id]) %} {% endif %}
                {% if outfit.bottom %} {% set ids = ids|merge([outfit.bottom.id]) %} {% endif %}
                {% if outfit.shoes %} {% set ids = ids|merge([outfit.shoes.id]) %} {% endif %}
                
                <a href="{{ path('app_outfit_new', {'pre_selected': ids|join(',')}) }}" class="os-btn os-btn--accent os-btn--pill" data-turbo="false">
                    <svg viewBox="0 0 24 24">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                    </svg>
                    Guardar look
                </a>
            </div>
        {% endif %}
    </turbo-frame>
</div>
{% endblock %}
