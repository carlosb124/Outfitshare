{% extends 'base.html.twig' %}

{% block title %}Estilista Virtual - OutfitShare{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto py-8">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-extrabold text-gray-900 dark:text-gray-100 mb-2 flex items-center justify-center gap-3">
            <i class="bi bi-magic text-neon-lime"></i> Estilista Virtual
        </h1>
        <p class="text-gray-500 dark:text-gray-400 font-medium">Deja que el azar diseñe tu próximo look.</p>
    </div>

    {# Turbo Frame for async reload #}
    <turbo-frame id="randomizer_frame">
        <div class="flex flex-col lg:flex-row items-center justify-center gap-8 mb-12">
            {% if hasEnough %}
                {# Top Slot #}
                <div class="w-full max-w-xs">
                    {% if outfit.top %}
                        <div class="group relative bg-white dark:bg-gray-800 rounded-3xl shadow-lg border-2 border-transparent hover:border-neon-lime transition-all overflow-hidden h-[400px] flex flex-col">
                             <div class="bg-gray-50 dark:bg-gray-700/50 py-2 text-center text-xs font-bold text-gray-600 dark:text-gray-300 uppercase tracking-widest">Arriba</div>
                             <div class="flex-1 relative overflow-hidden bg-gray-100 dark:bg-gray-700">
                                 <img src="{{ asset('uploads/images/' ~ outfit.top.imagen) }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" alt="Top">
                             </div>
                             <div class="p-4 text-center font-bold text-dark-gray dark:text-white bg-white dark:bg-gray-800 z-10">
                                 {{ outfit.top.nombre }}
                             </div>
                        </div>
                    {% else %}
                         <div class="h-[400px] bg-gray-100 dark:bg-gray-800 rounded-3xl border-2 border-dashed border-gray-300 dark:border-gray-700 flex flex-col items-center justify-center text-gray-400">
                            <i class="bi bi-x-circle text-4xl mb-2"></i>
                            <span class="font-bold">Falta Parte de Arriba</span>
                        </div>
                    {% endif %}
                </div>

                <div class="hidden lg:flex text-gray-300 dark:text-gray-600">
                    <i class="bi bi-plus-lg text-3xl"></i>
                </div>

                {# Bottom Slot #}
                <div class="w-full max-w-xs">
                    {% if outfit.bottom %}
                         <div class="group relative bg-white dark:bg-gray-800 rounded-3xl shadow-lg border-2 border-transparent hover:border-neon-lime transition-all overflow-hidden h-[400px] flex flex-col">
                             <div class="bg-gray-50 dark:bg-gray-700/50 py-2 text-center text-xs font-bold text-gray-600 dark:text-gray-300 uppercase tracking-widest">Abajo</div>
                             <div class="flex-1 relative overflow-hidden bg-gray-100 dark:bg-gray-700">
                                 <img src="{{ asset('uploads/images/' ~ outfit.bottom.imagen) }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" alt="Bottom">
                             </div>
                             <div class="p-4 text-center font-bold text-dark-gray dark:text-white bg-white dark:bg-gray-800 z-10">
                                 {{ outfit.bottom.nombre }}
                             </div>
                        </div>
                    {% else %}
                        <div class="h-[400px] bg-gray-100 dark:bg-gray-800 rounded-3xl border-2 border-dashed border-gray-300 dark:border-gray-700 flex flex-col items-center justify-center text-gray-400">
                            <i class="bi bi-x-circle text-4xl mb-2"></i>
                            <span class="font-bold">Falta Parte de Abajo</span>
                        </div>
                    {% endif %}
                </div>
                
                {% if outfit.shoes %}
                <div class="hidden lg:flex text-gray-300 dark:text-gray-600">
                    <i class="bi bi-plus-lg text-3xl"></i>
                </div>

                {# Shoes Slot #}
                <div class="w-full max-w-xs">
                         <div class="group relative bg-white dark:bg-gray-800 rounded-3xl shadow-lg border-2 border-transparent hover:border-neon-lime transition-all overflow-hidden h-[400px] flex flex-col">
                             <div class="bg-gray-50 dark:bg-gray-700/50 py-2 text-center text-xs font-bold text-gray-600 dark:text-gray-300 uppercase tracking-widest">Zapatos</div>
                             <div class="flex-1 relative overflow-hidden bg-gray-100 dark:bg-gray-700">
                                 <img src="{{ asset('uploads/images/' ~ outfit.shoes.imagen) }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" alt="Shoes">
                             </div>
                             <div class="p-4 text-center font-bold text-dark-gray dark:text-white bg-white dark:bg-gray-800 z-10">
                                 {{ outfit.shoes.nombre }}
                             </div>
                        </div>
                </div>
                {% endif %}
            {% else %}
                <div class="col-span-3 text-center py-20 bg-white dark:bg-gray-800 rounded-3xl shadow-sm border border-gray-100 dark:border-gray-700 w-full">
                    <div class="inline-flex items-center justify-center w-20 h-20 bg-gray-100 dark:bg-gray-700 rounded-full mb-6">
                        <i class="bi bi-emoji-frown text-4xl text-gray-400"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-dark-gray dark:text-white mb-2">¡No hay suficiente ropa!</h3>
                    <p class="text-gray-400 mb-8">Sube al menos una parte de arriba y una de abajo para jugar.</p>
                    <a href="{{ path('app_prenda_new') }}" class="bg-neon-lime text-dark-gray px-8 py-3 rounded-full font-bold shadow-md hover:shadow-lg transition-all" data-turbo="false">
                        Añadir Prendas
                    </a>
                </div>
            {% endif %}
        </div>

        {% if hasEnough %}
            <div class="flex flex-col sm:flex-row justify-center gap-4">
                <a href="{{ path('app_randomizer_index') }}" class="px-8 py-4 rounded-full font-bold border-2 border-dark-gray dark:border-white text-dark-gray dark:text-white hover:bg-dark-gray hover:text-white dark:hover:bg-white dark:hover:text-dark-gray transition-all flex items-center justify-center gap-2">
                    <i class="bi bi-arrow-repeat text-xl"></i> Girar de Nuevo
                </a>
                
                {# Construct IDs for saving #}
                {% set ids = [] %}
                {% if outfit.top %} {% set ids = ids|merge([outfit.top.id]) %} {% endif %}
                {% if outfit.bottom %} {% set ids = ids|merge([outfit.bottom.id]) %} {% endif %}
                {% if outfit.shoes %} {% set ids = ids|merge([outfit.shoes.id]) %} {% endif %}
                
                <a href="{{ path('app_outfit_new', {'pre_selected': ids|join(',')}) }}" class="px-8 py-4 rounded-full font-bold bg-neon-lime text-dark-gray shadow-lg shadow-neon-lime/20 hover:shadow-neon-lime/40 hover:-translate-y-1 transition-all flex items-center justify-center gap-2" data-turbo="false">
                    <i class="bi bi-heart-fill"></i> Guardar Outfit
                </a>
            </div>
        {% endif %}
    </turbo-frame>
</div>
{% endblock %}
